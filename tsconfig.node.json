{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "src/**/*.d.ts",
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "module": "ESNext",
    "isolatedModules": true,
    "moduleResolution": "node",
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
